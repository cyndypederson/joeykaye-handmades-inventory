{
  "name": "joeykaye-handmades-inventory",
  "version": "1.1.3",
  "description": "A web-based inventory management system for Joey Kaye Handmades",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:clean": "pkill -f 'node server.js' || true && lsof -ti :3003 | xargs kill -9 || true && node server.js",
    "dev": "nodemon server.js",
    "deploy": "./deploy.sh",
    "version:bump": "node update-version.js",
    "version:check": "curl -s http://localhost:3003/version.json | jq .",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop joeykaye-inventory",
    "pm2:restart": "pm2 restart joeykaye-inventory",
    "pm2:delete": "pm2 delete joeykaye-inventory",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs joeykaye-inventory",
    "test": "node test-smoke.js",
    "test:smoke": "node test-smoke.js",
    "test:modals": "node test-modal-separation.js",
    "test:comprehensive": "node test-comprehensive.js",
    "test:all": "npm run test:smoke && npm run test:modals && npm run test:comprehensive",
    "test:watch": "nodemon test-smoke.js",
    "pre-deploy": "node pre-deploy.js",
    "deploy:safe": "npm run pre-deploy && npm run deploy"
  },
  "keywords": [
    "handmade",
    "crafts",
    "yarn",
    "inventory",
    "management"
  ],
  "author": "Joey Kaye Handmades",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "mongodb": "^6.19.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "axe-core": "^4.11.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "pm2": "^6.0.11",
    "puppeteer": "^24.22.3",
    "supertest": "^7.1.4",
    "vercel": "^41.0.2"
  }
}